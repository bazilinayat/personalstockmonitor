<Window x:Class="StockMonitor.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StockMonitor.Views"
        xmlns:helper="clr-namespace:StockMonitor.Helper"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        ResizeMode="CanResizeWithGrip"
        WindowStyle="SingleBorderWindow"
        Background="White"
        Title="MainWindow" Height="700" Width="800"
        MinWidth="800"
        MinHeight="700">

    <Window.Resources>
        <helper:CountToBoolConverter x:Key="CountToBoolConverter"/>
    </Window.Resources>
    

    <Grid Margin="20">
        <!-- three rows: Title / Top area / Bottom (fills remaining space) -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="📊 My Application Name"
                   FontSize="22"
                   FontWeight="Bold"
                   Foreground="DarkSlateGray"
                   Margin="10,0,0,20"/>

        <!-- Top area: left (two stacked boxes) and right (reports) -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Left stacked boxes -->
            <StackPanel Grid.Column="0" Orientation="Vertical" VerticalAlignment="Top">
                <!-- First Section -->
                <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="8" Padding="10" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Search Options" FontWeight="Bold" Margin="0,0,0,10"/>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Type:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <ComboBox Grid.Column="1" Width="150"
                                      ItemsSource="{Binding TypeOptions}"
                                      SelectedValuePath="Id"
                                      DisplayMemberPath="Name"
                                      SelectedItem="{Binding SelectedType}" Margin="0,0,10,0"/>

                            <!-- Company -->
                            <TextBlock Grid.Column="2" Text="Company:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <ComboBox Grid.Column="3" Width="150"
                                  ItemsSource="{Binding CompanyOptions}"
                                  SelectedValuePath="Id"
                                  DisplayMemberPath="Name"
                                  SelectedValue="{Binding SelectedCompanyKey, Mode=TwoWay}"
                                  Margin="0,0,10,0"/>

                            <Button Grid.Column="4" Content="Search"
                                    Command="{Binding SearchCommand}" Width="80"/>
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Random:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <Button Grid.Column="1" Content="Random Search"
                                    Command="{Binding RandomSearchCommand}" Width="130"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Second Section -->
                <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="8" Padding="10">
                    <StackPanel>
                        <TextBlock Text="Data" FontWeight="Bold" Margin="0,0,0,10"/>
                        <Button Content="Load Data"
                                Command="{Binding LoadDataCommand}" Width="100"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Right Section (Reports) -->
            <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1" CornerRadius="8" Padding="10" VerticalAlignment="Top" Margin="20,0,0,0">
                <StackPanel>
                    <TextBlock Text="Reports Check" FontWeight="Bold" Margin="0,0,0,10"/>
                    <StackPanel Orientation="Vertical" VerticalAlignment="Top" >
                        <Button Content="Daily Reports" Command="{Binding DailyReportCommand}" Margin="0,5,0,0"/>
                        <Button Content="Weekly Reports" Command="{Binding WeeklyReportCommand}" Margin="0,5,0,0"/>
                        <Button Content="Monthly Reports" Command="{Binding MonthlyReportCommand}" Margin="0,5,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Bottom section: spans both columns -->
        <Border Grid.Row="2" Grid.ColumnSpan="2" BorderBrush="Gray" BorderThickness="1" CornerRadius="8" Padding="15" Margin="0,20,0,0">
            <StackPanel>
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Vertical" Grid.Column="0">
                        <TextBlock Text="Charts to Check Today" FontWeight="Bold" FontSize="16"/>
                        <TextBlock Text="{Binding CurrentDate, StringFormat='Date: {0:dd-MMM-yyyy}'}"/>
                    </StackPanel>

                    <Button Grid.Column="1"
                            Content="Refresh"
                            Width="100"
                            Command="{Binding RefreshCommand}"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"/>
                </Grid>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Daily -->
                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="Daily Remark" FontWeight="Bold" Margin="0,0,0,5"/>
                        <ListView ItemsSource="{Binding DailyCompanies}"
                                  DisplayMemberPath="Name"
                                  Height="200"
                                  MouseDoubleClick="ListView_MouseDoubleClick"/>
                    </StackPanel>

                    <!-- Weekly -->
                    <StackPanel Grid.Column="1" Margin="5,0,5,0">
                        <TextBlock Text="Weekly Remark" FontWeight="Bold" Margin="0,0,0,5"/>
                        <ListView ItemsSource="{Binding WeeklyCompanies}" 
                                  DisplayMemberPath="Name"
                                  Height="200"
                                  MouseDoubleClick="ListView_MouseDoubleClick_1"/>
                    </StackPanel>

                    <!-- Monthly -->
                    <StackPanel Grid.Column="2" Margin="10,0,0,0">
                        <TextBlock Text="Monthly Remark" FontWeight="Bold" Margin="0,0,0,5"/>
                        <ListView ItemsSource="{Binding MonthlyCompanies}" 
                                  DisplayMemberPath="Name"
                                  Height="200"
                                  MouseDoubleClick="ListView_MouseDoubleClick_2"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>

</Window>
