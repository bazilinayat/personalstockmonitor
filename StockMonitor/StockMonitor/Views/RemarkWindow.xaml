<Window x:Class="StockMonitor.Views.RemarkWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StockMonitor.Views"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        WindowStyle="SingleBorderWindow"
        ShowInTaskbar="False"
        Title="RemarkWindow" Height="500" Width="800">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Info Row -->
            <RowDefinition Height="*"/>
            <!-- Main Section -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="{Binding SelectedCompany.Name, StringFormat='Remarks for {0}'}"
                   FontWeight="Bold"
                   FontSize="20"
                   Foreground="DarkSlateGray"
                   Margin="0,0,0,15"/>

        <!-- Info Section (Date / Type / Buttons) -->
        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Left: Details -->
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Date:  " FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding CurrentDate, StringFormat=' {0:yyyy-MMM-dd}'}" Margin="0,0,0,5"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Company Symbol:  " FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding SelectedCompany.Name}" Margin="0,0,0,5"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Type:  " FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding SelectedOption.Name}" Margin="0,0,0,5"/>
                </StackPanel>
            </StackPanel>

            <!-- Right: Buttons -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" >
                <Button Content="Save" Command="{Binding SaveCommand}" Margin="0,0,10,0" Width="100" Height="20"/>
                <Button Content="Cancel" Click="CancelButton_Click" Width="100" Height="20"/>
            </StackPanel>
        </Grid>

        <!-- Main Section -->
        <!-- Bottom Section -->
        <Grid Grid.Row="2">

            <!-- Template for Day/Week/Month -->
            <ItemsControl ItemsSource="{Binding RemarkSections}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="3"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="8" Padding="10" Margin="5">
                            <StackPanel>
                                <CheckBox Content="{Binding Title}" 
                                          IsChecked="{Binding IsEnabled, Mode=TwoWay}" 
                                          FontWeight="Bold"/>

                                <StackPanel Margin="10,5,0,0" IsEnabled="{Binding IsEnabled}">
                                    <TextBlock Text="* Position: " FontWeight="SemiBold"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,3,0,10">
                                        <RadioButton Content="Buy"
                                                IsChecked="{Binding IsBuy, Mode=TwoWay}"
                                                GroupName="{Binding PositionGroupName}" />
                                        <RadioButton Content="Sell"
                                                 IsChecked="{Binding IsSell, Mode=TwoWay}"
                                                 GroupName="{Binding PositionGroupName}" />
                                    </StackPanel>

                                    <TextBlock Text="* Prediction:" FontWeight="SemiBold"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,3,0,10">
                                        <RadioButton Content="Up"
                                             IsChecked="{Binding IsUp, Mode=TwoWay}"
                                             GroupName="{Binding PredictionGroupName}" />
                                        <RadioButton Content="Down"
                                             IsChecked="{Binding IsDown, Mode=TwoWay}"
                                             GroupName="{Binding PredictionGroupName}" />
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0, 3, 0, 10">
                                        <TextBlock Text="Date to Check:  " FontWeight="Bold" Margin="0,0,0,5"/>
                                        <TextBlock Text="{Binding CheckDateLabel}" FontStyle="Italic" Margin="0,0,0,10"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Vertical" Margin="0, 3, 0, 10">
                                        <TextBlock Text="* Notes:  " FontWeight="Bold" Margin="0,0,0,5"/>
                                        <TextBox Text="{Binding Notes, Mode=TwoWay}"
                                                 Height="80" TextWrapping="Wrap"
                                                 AcceptsReturn="True" 
                                                 VerticalScrollBarVisibility="Auto"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </Grid>

</Window>
