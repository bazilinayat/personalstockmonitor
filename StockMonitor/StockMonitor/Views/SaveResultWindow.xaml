<Window x:Class="StockMonitor.Views.SaveResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StockMonitor.Views"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        WindowStyle="SingleBorderWindow"
        ShowInTaskbar="False"
        Title="SaveResultWindow" Height="500" Width="800">

    <Grid Margin="20">
        <DockPanel Margin="20">

            <!-- HEADER -->
            <Grid DockPanel.Dock="Top" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Text="{Binding Heading}" 
                           Foreground="DarkSlateGray"
                           FontSize="20" 
                           FontWeight="Bold"
                           VerticalAlignment="Center" />

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Save" Width="100" Height="20" Command="{Binding SaveCommand}" Margin="0,0,10,0" />
                    <Button Content="Cancel" Width="100" Height="20" Click="CancelButton_Click" />
                </StackPanel>
            </Grid>

            <!-- MAIN CONTENT -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- SECTION 1: Read-only info -->
                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <TextBlock Text="Remark Date:" FontWeight="Bold" />
                    <TextBlock Text="{Binding RemarkDate, StringFormat='{}{0:yyyy-MMM-dd}'}" Margin="0,0,0,10"/>

                    <TextBlock Text="Position:" FontWeight="Bold" />
                    <TextBlock Text="{Binding Position}" Margin="0,0,0,10"/>

                    <TextBlock Text="Prediction:" FontWeight="Bold" />
                    <TextBlock Text="{Binding Prediction}" Margin="0,0,0,10"/>

                    <TextBlock Text="Comments:" FontWeight="Bold" />
                    <ScrollViewer Height="150" VerticalScrollBarVisibility="Auto">
                        <TextBlock Text="{Binding PreviousComments}" TextWrapping="Wrap" />
                    </ScrollViewer>
                </StackPanel>

                <!-- SECTION 2: Editable -->
                <StackPanel Grid.Column="1">
                    <TextBlock Text="Current Date:" FontWeight="Bold" />
                    <TextBlock Text="{Binding CurrentDate, StringFormat='{}{0:yyyy-MMM-dd}'}" Margin="0,0,0,10"/>

                    <TextBlock Text="* Result:" FontWeight="Bold" />
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <RadioButton Content="For"
                                 GroupName="ResultGroup"
                                 IsChecked="{Binding IsFor, Mode=TwoWay}" />
                        <RadioButton Content="Against"
                                 GroupName="ResultGroup"
                                 Margin="20,0,0,0"
                                 IsChecked="{Binding IsAgainst, Mode=TwoWay}" />
                    </StackPanel>

                    <TextBlock Text="* Comment:" FontWeight="Bold" />
                    <TextBox Text="{Binding NewComment, Mode=TwoWay}"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             Height="150"
                             VerticalScrollBarVisibility="Auto"/>
                </StackPanel>
            </Grid>

        </DockPanel>
    </Grid>
    
</Window>
