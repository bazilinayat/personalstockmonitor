<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StockMonitor.Controls.LoadDataPopup"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             CanBeDismissedByTappingOutsideOfPopup="False"
             xmlns:vm="clr-namespace:StockMonitor.ViewModels"
             xmlns:data="clr-namespace:StockMonitor.Data"
             xmlns:models="clr-namespace:StockMonitor.Models"
             xmlns:controls="clr-namespace:StockMonitor.Controls"
             x:DataType="vm:LoadDataViewModel"
             Size="600,400">

    <toolkit:Popup.Resources>
        <ResourceDictionary>
            <Style TargetType="Entry" x:Key="txt">
                <Setter Property="BackgroundColor" Value="Wheat" />
                <Setter Property="PlaceholderColor" Value="Black" />
            </Style>
            <Style TargetType="Label" x:Key="lbl">
                <Setter Property="FontSize" Value="16" />
            </Style>
        </ResourceDictionary>
    </toolkit:Popup.Resources>

    <VerticalStackLayout Padding="20" Spacing="15">

        <!-- Heading -->
        <Label Text="Load Data Options" 
               FontSize="22"
               FontAttributes="Bold"
               HorizontalOptions="Start"
               Margin="0,0,0,10" />

        <!-- List of options -->
        <CollectionView ItemsSource="{Binding PickerOptions}" SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:ValueForPickerSelectionForFile">
                    <HorizontalStackLayout Spacing="10" VerticalOptions="Center" Padding="5">

                        <CheckBox IsChecked="{Binding IsSelected}" VerticalOptions="Center" />

                        <Label Text="{Binding Value}" 
                               VerticalOptions="Center"
                               WidthRequest="120"
                               LineBreakMode="TailTruncation" />

                        <Button Text="Pick File"
                                Command="{Binding PickFileCommand}"
                                VerticalOptions="Center" />

                        <Label Text="{Binding SelectedFileName}"
                               VerticalOptions="Center"
                               TextColor="Gray"
                               FontAttributes="Italic"
                               LineBreakMode="TailTruncation"
                               WidthRequest="150" />
                    </HorizontalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Cancel button -->
        <Button Text="Cancel"
                Clicked="CloseLabel_Tapped"
                HorizontalOptions="Center"
                Margin="0,10,0,0" />

    </VerticalStackLayout>

</toolkit:Popup>
